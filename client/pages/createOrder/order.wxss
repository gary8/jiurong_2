/* pages/quote/quote.wxss */
.quote-form{
  background: white;
  border: 1px solid #d5d5d5;
  border-radius: 10rpx;
  box-shadow: lightgray 8rpx 8rpx 10rpx 4rpx;
  padding: 20rpx;
  color: #333;
  font-size: 30rpx;
  margin: 50rpx;
}
.volume-box{
  display: flex;
  flex-direction:row;
}
.form-item{
  display: flex;
  margin: 20rpx;
}
.input-txt{
  height: 48rpx;
  border: 1px solid #d5d5d5;
  border-radius: 5px;
  margin-left: 20rpx;
  padding: 4rpx;
  text-align: center;
}
.form-text{
  text-align: center;
  line-height: 60rpx;
}
.pick-txt{
  height: 48rpx;
  border: 1px solid #d5d5d5;
  border-radius: 5px;
  margin-left: 20rpx;
  padding: 4rpx;
  text-align: center;
}
button{
  height: 60rpx;
  line-height: 60rpx;
}
.result-title{
  margin: 50rpx;
  color: #333;
  font-size: 30rpx;
  display: flex;
}
.channel-item{
  background: white;
  border: 1px solid #d5d5d5;
  border-radius: 10rpx;
  box-shadow: lightgray 8rpx 8rpx 10rpx 4rpx;
  padding: 20rpx;
  color: #333;
  font-size: 30rpx;
  margin: 50rpx;
}
.item-line-1{
  display: flex;
  justify-content: space-between;
}
.all-price{
  color: darkcyan;
}
.item-line-2{
  color: #666666;
  font-size: 20rpx;
}
